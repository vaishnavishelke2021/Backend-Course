<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="w-full min-h-[100vh] bg-zinc-900 px-10 py-8 text-zinc-300">
      <nav class="flex gap-x-7">
        <a
          class="text-zinc-400 pb-[3px] border-zinc-400 hover:text-zinc-200 transition-all duration-250"
          href="/"
          >Home</a
        >
        <a
          class="text-zinc-300 pb-[3px] border-b border-zinc-300 hover:text-zinc-200 transition-all duration-250"
          href="/users"
          >All Users</a
        >
      </nav>
      <h1 class="text-3xl mt-10 font-semibold">All Users</h1>

      <div class="mt-10 flex gap-x-5">
        <% if(allUsers.length > 0){ %> <% allUsers.forEach((user)=>{ %>
        <div class="w-[13.5%] p-2 rounded-md bg-zinc-800">
          <div class="w-full h-[175px] rounded-md">
            <img
              class="w-full h-full object-cover rounded-md"
              src="<%= user.image  %>"
              alt=""
            />
          </div>
          <h1 class="text-[1.2rem] font-semibold mt-[5px]"><%= user.name %></h1>
          <p class="text-[14px] flex flex-wrap text-zinc-500">
            <%= user.email %>
          </p>

          <div class="flex justify-between mt-4 items-center">
            <a
              class="text-zinc-500 text-[14px] pb-[3px] border-zinc-400 hover:text-zinc-400 transition-all duration-250"
              href=""
              >Edit User</a
            >

            <a
              class="text-red-600 text-[14px] pb-[3px] border-zinc-400 hover:text-red-700 transition-all duration-250"
              href="/delete/<%= user._id  %>"
              >Delete User</a
            >
          </div>
        </div>

        <% }) %> <% } else { %>
        <h1 class="text-zinc-500 italic">No User Available</h1>
        <% } %>
      </div>
    </div>
  </body>
</html>
